@model List<ZeroHunger.DTO.CollectRequestDTO>

@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
            color: #333333;
        }

        .container {
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-color: #DA70D6; /* pink border color */
        }

        .btn-success {
            background-color: #DA70D6; /* pink button color */
            border-color: #A12A9C;
            color: #ffffff;
            transition: background-color 0.3s ease-in-out;
        }

            .btn-success:hover {
                background-color: #A12A9C; /* Darker pink color on hover */
                border-color: #A12A9C;
            }
    </style>
</head>
<body>

    <div class="container">

        <h2 class="mt-4">Admin Dashboard</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Request ID</th>
                    <th>Restaurant ID</th>
                    <th>Requested Time</th>
                    <th>Preserve Time (Hours)</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var collectRequest in Model)
                {
                    <tr>
                        <td>@collectRequest.Request_ID</td>
                        <td>@collectRequest.Restaurant_ID</td>
                        <td>@collectRequest.Request_DateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@collectRequest.Maximum_Preservation_Time</td>
                        <td>@collectRequest.Status</td>
                    </tr>
                }
            </tbody>
        </table>

        <p>
            @Html.ActionLink("Pending Collect Requests", "ReviewCollectRequests", "Admin", null, new { @class = "btn btn-success" })
        </p>

    </div>

</body>
</html>
